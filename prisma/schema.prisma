// SiteBotGPT - AI Chatbot SaaS
// MySQL Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?   // For email auth
  removeBrandingAddOn Boolean @default(false) // Purchased "Remove SiteBotGPT branding" add-on
  termsAcceptedAt DateTime?   // Signup: "I agree to Terms & Privacy"
  stripeCustomerId String? @unique // Stripe Customer for billing portal & subscriptions
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  bots                  Bot[]
  sessions              Session[]
  userPlan              UserPlan?
  apiKeys               ApiKey[]
  webhooks              Webhook[]
  accountMembersAsOwner AccountMember[]  @relation("AccountOwner")
  accountMembersAsMember AccountMember[] @relation("AccountMember")
  invitationsSent       TeamInvitation[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Bot {
  id              String   @id @default(cuid())
  name            String
  userId          String
  greetingMessage String   @default("Hi! How can I help you today?") @db.VarChar(500)
  tone            String   @default("friendly") // formal, friendly, casual
  confidenceThreshold Float @default(0.7)
  leadCaptureTrigger  String @default("uncertain") // uncertain, always, never
  humanFallbackMessage String @default("I'm not sure about that. Would you like to leave your contact and we'll get back to you?") @db.VarChar(500)
  quickPrompts    String?  @db.Text // JSON array: ["Question 1", "Question 2"]
  publicKey       String?  @unique // For widget token validation
  removeBranding Boolean  @default(false) // White-label: hide "Powered by SiteBotGPT" in widget (add-on)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  sources    Source[]
  chunks     Chunk[]
  chats      Chat[]
  leads      Lead[]
  usageLogs  UsageLog[]

  @@index([userId])
  @@index([publicKey])
}

model Source {
  id              String    @id @default(cuid())
  botId           String
  type            String    // url, document
  url             String?   @db.Text // For website pages
  documentUrl     String?   @db.Text // For uploaded files
  title           String?
  status          String    @default("pending") // pending, processing, completed, failed
  pageCount       Int       @default(0)
  error           String?   @db.Text
  lastRefreshedAt DateTime? // When content was last re-crawled/re-indexed (for auto-refresh)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  bot    Bot    @relation(fields: [botId], references: [id], onDelete: Cascade)
  chunks Chunk[]

  @@index([botId])
  @@index([status])
}

model Chunk {
  id         String   @id @default(cuid())
  botId      String
  sourceId   String
  content    String   @db.LongText
  metadata   Json?    // { sourceUrl, pageTitle, documentName }
  tokenCount Int      @default(0)
  createdAt  DateTime @default(now())

  bot    Bot       @relation(fields: [botId], references: [id], onDelete: Cascade)
  source Source    @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  embedding Embedding?

  @@index([botId])
  @@index([sourceId])
  @@index([botId, createdAt]) // Optimization: Composite index for efficient chunk retrieval by botId and createdAt
}

model Embedding {
  id        String   @id @default(cuid())
  chunkId   String   @unique
  botId     String
  vector    Json     // Array of floats from OpenAI
  createdAt DateTime @default(now())

  chunk Chunk @relation(fields: [chunkId], references: [id], onDelete: Cascade)

  @@index([botId])
}

model Chat {
  id          String   @id @default(cuid())
  botId       String
  visitorId   String?  // Anonymous or identified
  visitorEmail String?
  visitorName  String?
  pageUrl     String?  @db.Text
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bot     Bot          @relation(fields: [botId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([botId])
  @@index([visitorId])
  @@index([createdAt])
  @@index([botId, createdAt])
}

model ChatMessage {
  id        String   @id @default(cuid())
  chatId    String
  role      String   // user, assistant
  content   String   @db.LongText
  sources   Json?    // Cited source URLs
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
}

model Lead {
  id        String   @id @default(cuid())
  botId     String
  name      String?
  email     String
  phone     String?
  message   String?  @db.Text
  pageUrl   String?  @db.Text
  status    String   @default("new") // new, contacted, qualified, converted, lost
  metadata  Json?
  createdAt DateTime @default(now())

  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([botId])
  @@index([email])
  @@index([status])
  @@index([botId, createdAt])
}

model UsageLog {
  id        String   @id @default(cuid())
  botId     String
  type      String   // message, crawl, embed
  count     Int      @default(1)
  metadata  Json?
  createdAt DateTime @default(now())

  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([botId])
  @@index([createdAt])
  @@index([botId, createdAt])
}

// Billing: Plan limits + gateway-specific plan/price IDs
model Plan {
  id             String   @id @default(cuid())
  name           String
  dailyLimit     Int      @default(100) // Messages per day
  botLimit       Int      @default(3)
  storageLimit   Int      @default(50)  // MB
  teamMemberLimit Int     @default(1)   // Owner + invited members
  price          Float    @default(0)
  stripePriceIdMonthly String?  // Stripe (international)
  stripePriceIdYearly  String?
  razorpayPlanIdMonthly String?  // Razorpay (India)
  razorpayPlanIdYearly  String?
  paypalPlanIdMonthly   String?  // PayPal (international)
  paypalPlanIdYearly    String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userPlans UserPlan[]
}

// Team: account owner can invite members to access their bots/dashboard
model AccountMember {
  id             String   @id @default(cuid())
  accountOwnerId String  // User who owns the plan and bots
  memberUserId   String  // Invited user who can view/edit owner's resources
  role           String  @default("member") // admin | member
  createdAt      DateTime @default(now())

  accountOwner User @relation("AccountOwner", fields: [accountOwnerId], references: [id], onDelete: Cascade)
  member       User @relation("AccountMember", fields: [memberUserId], references: [id], onDelete: Cascade)

  @@unique([accountOwnerId, memberUserId])
  @@index([accountOwnerId])
  @@index([memberUserId])
}

model TeamInvitation {
  id             String   @id @default(cuid())
  accountOwnerId String
  email          String
  role           String   @default("member") // admin | member
  token          String   @unique
  expiresAt      DateTime
  createdAt      DateTime @default(now())

  accountOwner User @relation(fields: [accountOwnerId], references: [id], onDelete: Cascade)

  @@index([accountOwnerId])
  @@index([token])
}

model UserPlan {
  id        String   @id @default(cuid())
  userId    String   @unique
  planId    String
  stripeSubscriptionId String?  // Stripe
  razorpaySubscriptionId String?  // Razorpay (India)
  paypalSubscriptionId  String?  // PayPal (international)
  stripePriceId        String?
  currentPeriodEnd     DateTime?
  startsAt  DateTime @default(now())
  endsAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// API keys for programmatic access (Scale, Enterprise). Key secret is hashed; prefix shown in UI.
model ApiKey {
  id         String    @id @default(cuid())
  userId     String    // Account owner who owns this key
  name       String    @db.VarChar(255) // e.g. "Production", "Development"
  keyPrefix  String    @db.VarChar(20)  // e.g. "sk_live_abc1" for display
  keyHash    String    @db.VarChar(64)  // SHA-256 hex of full key
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([keyHash])
}

// Webhooks: receive HTTP callbacks for events (Scale, Enterprise). Secret used to sign payloads.
model Webhook {
  id          String   @id @default(cuid())
  userId      String   // Account owner
  url         String   @db.Text // Endpoint URL (HTTPS)
  secret      String   @db.VarChar(64) // Signing secret (plain, for HMAC)
  events      String   @db.VarChar(255) // Comma-separated: lead.captured,chat.message
  description String?  @db.VarChar(500)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Contact form submissions (public /contact page)
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String   @db.VarChar(255)
  email     String   @db.VarChar(255)
  subject   String   @db.VarChar(500)
  message   String   @db.Text
  status    String   @default("new") // new, read, replied, archived
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([status])
}

// Site-wide settings (admin-controlled)
model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique // e.g. "recaptcha_enabled"
  value     String   @db.Text // JSON or string value
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([key])
}
